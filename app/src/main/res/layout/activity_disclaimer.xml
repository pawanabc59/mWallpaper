<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".DisclaimerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Disclaimer"
                android:textColor="?attr/textcolor"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="We do not claim any wallpapers"
                android:textColor="?attr/textcolor"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="For Copyright Holder"
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="All the wallpapers in this app are collected from various resources available on internet through search engines like that and by the users uploads. If you find any of the wallpapers originally belong to you, if you don't want to display them please do Contact us. Please consider the fact that we do not intentionally distributing your work. We always respect your work for creating and produce those wonderful wallpapers. But due to the fact we are using a 3rd party script which doesn't have feature to display credits and copyright information. We are Currently working on it. We already requested our users to comply with our copyright policy."
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="If you are still any dispercency or not satisfied with our copyright policy please don't forget to Contact Us. So we can take a proper action as soon as possible."
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="For Users and Visitors"
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Attention every users and visitor of this app. You can download anything from this app are purely for personal use. You do not have any permission to use any wallpapers commercially (In any app, website, printing for sale, etc...). If you want to use wallpapers or images for commercial purposes you must take the permission from the original copyright holder of that wallpapers or images. You are responsible for all the wallpapers that you have uploaded"
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="If you have any queries please don't forget to Contact Us."
                android:textColor="?attr/textcolor"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Thank you for using this app."
                android:textColor="?attr/textcolor"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>