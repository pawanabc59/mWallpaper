<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    tools:context=".MyUploadsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myUploadRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/white_black" />

    <ImageView
        android:id="@+id/myUploadmbImage"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_51sdp"
        android:src="@drawable/empty"
        android:visibility="visible" />

    <TextView
        android:id="@+id/myUploadshowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_260sdp"
        android:text="You have not uploaded any wallpaper. Upload wallpapers to see them here."
        android:textColor="?attr/textcolor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:gravity="center"/>

</FrameLayout>